<Window x:Class="Presentation.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Team Manager - Loading" Height="200" Width="420" WindowStyle="None" Background="#FF2B2D30" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Cursor="Wait" ShowInTaskbar="False">
    <Grid>
        <Label Content="Team Manager" Margin="10,10,10,0" VerticalAlignment="Top" Height="85" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="48" FontWeight="Bold"/>
        <Label x:Name="LoadingLabel" Content="Loading..." Margin="20,0,20,40" Foreground="White" Height="26" VerticalAlignment="Bottom"/>
        <ProgressBar x:Name="LoadingBar" Value="0" Margin="20" Height="15" VerticalAlignment="Bottom" Foreground="#FF0C84BB" Background="#FF44474B" BorderThickness="0"/>
    </Grid>
</Window>
