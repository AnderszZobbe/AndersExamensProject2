<Window x:Class="Presentation.WorkteamOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Oversigt" Height="450" Width="1314.286" WindowStartupLocation="CenterScreen" Closing="WindowClosing">
    <Grid>
        <StackPanel Margin="10,10,10,35" x:Name="OrderStack">
            <Grid VerticalAlignment="Top" x:Name="OrderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Klar" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Content="Ordrenummer" Grid.Column="1" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Content="Strækning" Grid.Column="2" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Content="Maskine" Grid.Column="3" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Content="m2" Grid.Column="4" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label Content="tons" Grid.Column="5" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Grid Grid.Column="6"/>
            </Grid>
        </StackPanel>
        <ListBox Margin="10,45,10,35" x:Name="OrderList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding OrderNumber}"/>
                        <TextBlock Text="{Binding OrderNumber}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Dokumentérny arbejdsordre" Margin="10,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Button_Click"/>
    </Grid>
</Window>
