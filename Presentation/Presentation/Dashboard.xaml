<Window x:Class="Presentation.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="375*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <Button Content="Lav nyt arbejdshold" DockPanel.Dock="Bottom" Margin="10,0,10,10" Height="30" VerticalAlignment="Bottom" FontSize="16"/>
            <ListBox Margin="10,10,10,10" x:Name="WorkteamList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Foreman}" FontSize="16"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Frame Grid.Column="1"/>

    </Grid>
</Window>
