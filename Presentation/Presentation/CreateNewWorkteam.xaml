<Window x:Class="Presentation.CreateNewWorkteam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Lav nyt arbejdshold" Width="200" SizeToContent="Height" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Label Content="Formand:" Margin="0,0,0,0" VerticalAlignment="Top"/>
            <TextBox Height="23" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="foreman"/>
            <Button Content="Gem nyt arbejdshold" Margin="0,0,0,0" VerticalAlignment="Top" Click="SaveNewWorkteam"/>
        </StackPanel>
    </Grid>
</Window>
